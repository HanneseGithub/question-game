{
  "extends": [
    "html-validate:recommended"
  ],
  "rules": {
    "heading-level": "error",
    "input-missing-label": "error",
    "missing-doctype": "error",
    "no-missing-references": "error",
    "void-style": [
      "error",
      {
        "style": "selfclosing"
      }
    ],
    "attr-case": [
      "error",
      {
        "style": ["lowercase", "camelcase"]
      }
    ],
    "attribute-boolean-style": [
      "error",
      {
        "style": "empty"
      }
    ]
  }
}
