{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2017"
    ],
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@button": [
        "components/button/button"
      ],
      "@icon": [
        "components/icon/icon"
      ],
      "@preview": [
        "core/preview/preview"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "jspm_packages"
  ],
  "include": [
    "src/**/*"
  ]
}
