{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2017"
    ],
    "target": "es5",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "sourceMap": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*"
  ]
}
