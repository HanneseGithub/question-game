{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es2015.iterable"
    ],
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@button": [
        "src/components/button/button"
      ],
      "@preview": [
        "src/core/preview/preview"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "jspm_packages"
  ],
  "include": [
    "src/**/*"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ]
}
